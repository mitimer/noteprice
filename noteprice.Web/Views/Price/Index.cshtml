@model noteprice.Web.Models.PriciesListModel

@{
    ViewBag.Title = "Prices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("Add Price", "Create")

@using (Html.BeginForm("Search", "Price", FormMethod.Get))
{
    @Html.TextBox("filter")
    <input type="submit" value="Search" />
}
<div>
        @foreach (var p in Model.Pricies)
        {
            <fieldset>
                <legend> <b>@p.Text</b> </legend>
                <div>@p.StoreName @p.DateCreated.ToString("M") </div>
                <div><b>@p.Value.ToString("N0")</b>р. <i>@p.WeightStr</i> </div>
                <div>@Html.ActionLink("Edit", "Edit", new {p.Id})</div>
            </fieldset>
        }
</div>